@media all {

	body { 
		background-color: #ffffff;
		background-repeat: repeat;
	}
   
	.container {
	    width: 920px; margin: 0 auto; 
	    overflow: hidden; display: block;
		position: relative;
	}
	
	/* Header */
	
	header {
		padding: 30px 0 30px;
		text-align: center;
	}
	
	header #branding {
		text-indent: -1337px;
		display: inline-block;
		height: 181px;
		width: 303px;
		background: url(<%= asset_path "the_yard_logo.gif" %>) no-repeat; top left
	}

	/* About */
	
	#about { 
		width: 100%; 
		overflow: hidden; 
		padding-bottom: 100px;
	}
	
	#about img.desc { float: left; }
	
	#about article { 
		padding-top: 20px;
		width: 370px;
		float: right;
		position: relative;
	}
	
	#about #tweet {
		width: 100%;
		overflow: hidden;
	}
	
	#about #tweet .avatar {
		float: left;
		margin-right: 20px;
	}
	
	#about #tweet .tweet {
		float: left;
		width: 270px;
		font-size: 14px;
	}
	
	#about #tweet .tweet .body {
		line-height: 17px;
	}
	
	#about #tweet .tweet time {
		font-size: 11px;
		display: block;
		opacity: 0.7;
		margin-bottom: 3px;
	}
	
	#about #tweet .tweet time a {
		text-decoration: none;
	}
	
	#about #tweet .tweet time a:hover,
	#about #tweet .tweet time a:focus,
	#about #tweet .tweet time a:active {
		text-decoration: underline;
	}

	/* Subscribe */
	
	#subscribe {
		position: relative;
		overflow: hidden;
		width: 100%;
		padding: 20px 0 30px;
	}
	
	#subscribe p {
		margin: 0;
	}
	
	#subscribe .spin {
		position: absolute;
		right: 20px;
		top: 32px;
	}
	
}
