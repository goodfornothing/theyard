@media all {

	body { 
		background-color: #ffffff;
		background-repeat: repeat;
	}
   
	.container {
	    width: 800px; margin: 0 auto; 
	    overflow: hidden; display: block;
		position: relative;
	}

	/* Subscribe */
	
	#subscribe {
		width: 100%;
		color: #ffffff;
		background: darkblue;
		text-align: center;
		padding: 20px 0;
		border-radius: 20px;
		margin-bottom: 30px;
		position: relative;
	}
	
	#subscribe p {
		margin: 0 0 15px;
	}
	
	#subscribe a.icon {
		color: #ffffff;
		display: inline-block;
		font-size: 14px;
		padding-left: 28px;
		line-height: 17px;
		padding-top: 3px;
		background: url(<%= asset_path 'twitter.png' %>) no-repeat 0 50%;
	}
	
	#subscribe form {
		padding: 5px 0 5px;
		width: 600px;
		margin: 0 auto;
		overflow: hidden;
	}
	
	#subscribe .spin {
		position: absolute;
		right: 80px;
		top: 82px;
	}
	
}
