@font-face {
    font-family: 'PodkovaRegular';
    src: url(<%= asset_path 'Podkova-Regular-webfont.eot' %>);
    src: url(<%= asset_path 'Podkova-Regular-webfont.eot?#iefix' %>) format('embedded-opentype'),
         url(<%= asset_path 'Podkova-Regular-webfont.woff' %>) format('woff'),
         url(<%= asset_path 'Podkova-Regular-webfont.ttf' %>) format('truetype'),
         url(<%= asset_path 'Podkova-Regular-webfont.svg#PodkovaRegular' %>) format('svg');
    font-weight: normal;
    font-style: normal;

}

body { font-family: Helvetica, Sans-Serif; color: #353434; }

/* =h1 */

  h1 { 
    font-size: 24px; 
    font-weight: 100;
	margin-bottom: 18px;
	font-family: PodkovaRegular;
  }

/* =h2 */

  h2 {
    font-size: 22px; 
	margin-bottom: 20px;
	font-family: PodkovaRegular;
  }

/* =h3 */

  h3 { 
    font-size: 12px; 
    margin-bottom: 0.25em; 
  }

/* =p */

  p { 
    font-size: 16px;
    line-height: 1.5em; 
    margin-bottom: 1em;
  }

/* =a */

  a { color: #353434; text-decoration: underline; }
  a:hover, a:focus, a:active { text-decoration: none; }

/* =ul,ol,dl */

  ul, dl, ol { padding: 0.25em 2em 1.5em 1em; list-style-position: inside; }
  dl, ul { list-style-type: disc; }
  ol { list-style-type: decimal; }

  ol li ol, ol li ul, ul li ul, ul li ol
  { font-size: 1em; padding: 0.8em 0em 0em 1em; }

/* =li */

  li { font-size: 0.825em; line-height: 1.25em; }
	pre { background-color: transparent !important; }
