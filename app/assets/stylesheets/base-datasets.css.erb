/* =form */
 
	form { padding-bottom: 10px; }
	form fieldset { }

/* =label */
 
	label { 
	  display: block; 
	  position: relative; 
	}

/* =input */

	.string { 
		float: left; 
	}

	.string input { 
		padding: 10px 10px 12px; 
		font-size: 13px;
		border: 1px solid #474747;
		color: #474747;
		width: 260px;
		margin: 0;
		font-weight: normal;
		font-family: PodkovaRegular;
	}

	.field_with_errors input {
		border-color: darkred;
	}
	
	.button {
		border: none;
		float: left;
		text-indent: -1337px;
		width: 84px;
		padding: 0;
		margin: 0;
		position: relative;
		top: -8px;
		left: -4px;
		height: 50px;
		cursor: pointer;
		background: #ffffff url(<%= asset_path "finger.gif" %>) no-repeat 0 50%;
	}
	
	.button[disabled='disabled'] {
		opacity: 0.3;
		cursor: default;
	}